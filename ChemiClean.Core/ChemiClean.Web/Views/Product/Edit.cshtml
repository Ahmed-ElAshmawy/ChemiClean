@model  tblProduct

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .page-title .mdi-home:before {
        content: "\F64F";
    }
</style>


<div class="card">
    <div class="card-body">

        <p class="card-description"> Edit Product Data </p>

        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "forms-sample" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Password)
            @Html.HiddenFor(model => model.DocumentAvailable)

            <div class="form-group">
                <label for="ProductName">Product Name</label>
                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductName)
            </div>

            <div class="form-group">
                <label for="SupplierName">Supplier Name</label>
                @Html.EditorFor(model => model.SupplierName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SupplierName)
            </div>
            <div class="form-group">
                <label for="Url">Url</label>
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url)
            </div>
            <div class="form-group">
                <label for="UserName">User Name</label>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>

            <input type="submit" value="Submit" class="btn btn-gradient-primary mr-2" />
            <a href="@Url.Action("Index")" class="btn btn-light">Cancel</a>
        }
    </div>
</div>
